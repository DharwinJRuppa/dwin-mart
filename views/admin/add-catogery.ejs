<%- include('../layouts/adminheader.ejs') %>
<h2 class="page-title my-2">Add Catogery</h2>
<a href="/admin/catogeries" class="btn btn-primary mb-3">Back to All Catogeries</a>
<form method="POST" action="/admin/catogeries/add-catogery">
    <div class="form-group">
        <label for="title">Title</label>
        <input required type="text" class="form-control" name="title" value="<%= title %>" id="title"
            placeholder="Title">
    </div>
    <div class="form-group">
        <label for="slug">Slug</label>
        <input required type="text" class="form-control" name="slug" value="<%= slug %>" id="slug" placeholder="Slug">
    </div>
    <button type="submit" class="btn btn-outline-primary">Submit</button>
</form>

<%- include('../layouts/adminfooter.ejs') %>